# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dsa_platform

# Database Connection Details (used by Drizzle and session store)
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=dsa_platform

# Session Secret (required for session management)
SESSION_SECRET=your-super-secret-session-key-here

# Development Environment
NODE_ENV=development

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080/auth/
KEYCLOAK_REALM=dsa-platform
KEYCLOAK_CLIENT_ID=dsa-app

# Frontend Keycloak Configuration (for Vite)
VITE_KEYCLOAK_URL=http://localhost:8080/auth/
VITE_KEYCLOAK_REALM=dsa-platform
VITE_KEYCLOAK_CLIENT_ID=dsa-app